# EditorConfig configuration for PolyglotFormalisms.jl

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.jl]
indent_style = space
indent_size = 4

[*.scm]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.toml]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.json]
indent_style = space
indent_size = 2
